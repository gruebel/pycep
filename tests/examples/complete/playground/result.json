{
  "globals": {
    "scope": {
      "value": "resourceGroup"
    }
  },
  "parameters": {
    "virtualMachineSize": {
      "decorators": [
        {
          "type": "description",
          "argument": "'Virtual machine size (has to be at least the size of Standard_A3 to support 2 NICs)'"
        }
      ],
      "type": "string",
      "default": "'Standard_DS1_v2'"
    },
    "adminUsername": {
      "decorators": [
        {
          "type": "description",
          "argument": "'Default Admin username'"
        }
      ],
      "type": "string",
      "default": null
    },
    "adminPassword": {
      "decorators": [
        {
          "type": "description",
          "argument": "'Default Admin password'"
        },
        {
          "type": "secure"
        }
      ],
      "type": "string",
      "default": null
    },
    "storageAccountType": {
      "decorators": [
        {
          "type": "description",
          "argument": "'Storage Account type for the VM and VM diagnostic storage'"
        },
        {
          "type": "allowed",
          "argument": [
            "'Standard_LRS'",
            "'Premium_LRS'"
          ]
        }
      ],
      "type": "string",
      "default": "'Standard_LRS'"
    },
    "location": {
      "decorators": [
        {
          "type": "description",
          "argument": "'Location for all resources.'"
        }
      ],
      "type": "string",
      "default": {
        "function": {
          "type": "resource_group",
          "parameters": {
            "resource_group_name": null,
            "subscription_id": null
          },
          "property_name": "location"
        }
      }
    }
  },
  "variables": {
    "virtualMachineName": {
      "value": "'VM-MultiNic'"
    },
    "nic1Name": {
      "value": "'nic-1'"
    },
    "nic2Name": {
      "value": "'nic-2'"
    },
    "virtualNetworkName": {
      "value": "'virtualNetwork'"
    },
    "subnet1Name": {
      "value": "'subnet-1'"
    },
    "subnet2Name": {
      "value": "'subnet-2'"
    },
    "publicIPAddressName": {
      "value": "'publicIp'"
    },
    "diagStorageAccountName": {
      "value": "'diags${uniqueString(resourceGroup().id)}'"
    },
    "networkSecurityGroupName": {
      "value": "'NSG'"
    },
    "networkSecurityGroupName2": {
      "value": "'${subnet2Name}-nsg'"
    }
  },
  "resources": {
    "vm": {
      "decorators": [],
      "type": "Microsoft.Compute/virtualMachines",
      "api_version": "2020-06-01",
      "config": {
        "name": "virtualMachineName",
        "location": "location",
        "properties": {
          "osProfile": {
            "computerName": "virtualMachineName",
            "adminUsername": "adminUsername",
            "adminPassword": "adminPassword",
            "windowsConfiguration": {
              "provisionVMAgent": true
            }
          },
          "hardwareProfile": {
            "vmSize": "virtualMachineSize"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "'MicrosoftWindowsServer'",
              "offer": "'WindowsServer'",
              "sku": "'2019-Datacenter'",
              "version": "'latest'"
            },
            "osDisk": {
              "createOption": "'FromImage'"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "properties": {
                  "primary": true
                },
                "id": "nic1.id"
              },
              {
                "properties": {
                  "primary": false
                },
                "id": "nic2.id"
              }
            ]
          },
          "diagnosticsProfile": {
            "bootDiagnostics": {
              "enabled": true,
              "storageUri": "diagsAccount.properties.primaryEndpoints.blob"
            }
          }
        }
      }
    },
    "diagsAccount": {
      "decorators": [],
      "type": "Microsoft.Storage/storageAccounts",
      "api_version": "2019-06-01",
      "config": {
        "name": "diagStorageAccountName",
        "location": "location",
        "sku": {
          "name": "storageAccountType"
        },
        "kind": "'StorageV2'"
      }
    },
    "nsg2": {
      "decorators": [],
      "type": "Microsoft.Network/networkSecurityGroups",
      "api_version": "2020-06-01",
      "config": {
        "name": "networkSecurityGroupName2",
        "location": "location"
      }
    },
    "vnet": {
      "decorators": [],
      "type": "Microsoft.Network/virtualNetworks",
      "api_version": "2020-06-01",
      "config": {
        "name": "virtualNetworkName",
        "location": "location",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "'10.0.0.0/16'"
            ]
          },
          "subnets": [
            {
              "name": "subnet1Name",
              "properties": {
                "addressPrefix": "'10.0.0.0/24'"
              }
            },
            {
              "name": "subnet2Name",
              "properties": {
                "addressPrefix": "'10.0.1.0/24'",
                "networkSecurityGroup": {
                  "id": "nsg2.id"
                }
              }
            }
          ]
        }
      }
    },
    "nic1": {
      "decorators": [],
      "type": "Microsoft.Network/networkInterfaces",
      "api_version": "2020-06-01",
      "config": {
        "name": "nic1Name",
        "location": "location",
        "properties": {
          "ipConfigurations": [
            {
              "name": "'ipconfig1'",
              "properties": {
                "subnet": {
                  "id": {
                    "function": {
                      "type": "resource_id",
                      "parameters": {
                        "resource_type": "'Microsoft.Network/virtualNetworks/subnets'",
                        "resource_name_1": "vnet.name",
                        "resource_name_2": "subnet1Name",
                        "resource_group_name": null,
                        "subscription_id": null
                      }
                    }
                  }
                },
                "privateIPAllocationMethod": "'Dynamic'",
                "publicIPAddress": {
                  "id": "pip.id"
                }
              }
            }
          ],
          "networkSecurityGroup": {
            "id": "nsg.id"
          }
        }
      }
    },
    "nic2": {
      "decorators": [],
      "type": "Microsoft.Network/networkInterfaces",
      "api_version": "2020-06-01",
      "config": {
        "name": "nic2Name",
        "location": "location",
        "properties": {
          "ipConfigurations": [
            {
              "name": "'ipconfig1'",
              "properties": {
                "subnet": {
                  "id": {
                    "function": {
                      "type": "resource_id",
                      "parameters": {
                        "resource_type": "'Microsoft.Network/virtualNetworks/subnets'",
                        "resource_name_1": "vnet.name",
                        "resource_name_2": "subnet2Name",
                        "resource_group_name": null,
                        "subscription_id": null
                      }
                    }
                  }
                },
                "privateIPAllocationMethod": "'Dynamic'"
              }
            }
          ]
        }
      }
    },
    "pip": {
      "decorators": [],
      "type": "Microsoft.Network/publicIPAddresses",
      "api_version": "2020-06-01",
      "config": {
        "name": "publicIPAddressName",
        "location": "location",
        "properties": {
          "publicIPAllocationMethod": "'Dynamic'"
        }
      }
    },
    "nsg": {
      "decorators": [],
      "type": "Microsoft.Network/networkSecurityGroups",
      "api_version": "2020-06-01",
      "config": {
        "name": "networkSecurityGroupName",
        "location": "location",
        "properties": {
          "securityRules": [
            {
              "name": "'default-allow-rdp'",
              "properties": {
                "priority": 1000,
                "sourceAddressPrefix": "'*'",
                "protocol": "'Tcp'",
                "destinationPortRange": "'3389'",
                "access": "'Allow'",
                "direction": "'Inbound'",
                "sourcePortRange": "'*'",
                "destinationAddressPrefix": "'*'"
              }
            }
          ]
        }
      }
    }
  },
  "modules": {
    "network": {
      "decorators": [],
      "type": "local",
      "detail": {
        "full": "./network.bicep",
        "path": "./network.bicep"
      },
      "config": {
        "name": "'network'",
        "params": {
          "myIp": "'123.123.123.123'"
        }
      }
    }
  },
  "outputs": {
    "nsgId": {
      "type": "string",
      "value": "nsg.id"
    }
  }
}
